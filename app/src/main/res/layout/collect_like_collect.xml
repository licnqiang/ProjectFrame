<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="5dp">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/btn_like_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:text="0"
            android:textColor="@color/create_text" />

        <TextView
            android:id="@+id/btn_like"
            style="@style/collect_function_style"
            android:layout_margin="5dp"
            android:textColor="@color/them_black_font"
            android:drawableTop="@drawable/like_select_check"
            android:text="点赞" />
          
    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/btn_collect_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:text="0"
            android:textColor="@color/create_text" />

        <TextView
            android:id="@+id/btn_collect"
            style="@style/collect_function_style"
            android:layout_margin="5dp"
            android:textColor="@color/them_black_font"
            android:drawableTop="@drawable/collect_select_check"
            android:text="收藏" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true">

        <TextView
            android:id="@+id/btn_share_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:text="0"
            android:textColor="@color/create_text" />

        <TextView
            android:id="@+id/btn_share"
            style="@style/collect_function_style"
            android:layout_margin="5dp"
            android:textColor="@color/them_black_font"
            android:drawableTop="@mipmap/collect_fx"
            android:text="分享" />
    </FrameLayout>
</RelativeLayout>