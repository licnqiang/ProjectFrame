<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView
                style="@style/common_liner_lefttv_style"
                android:text="姓名" />

            <EditText
                android:id="@+id/user_name"
                style="@style/user_info_edit_style"
                android:hint="请输入姓名" />

        </RelativeLayout>

        <TextView style="@style/user_view_right_line_style" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView
                style="@style/common_liner_lefttv_style"
                android:text="性别" />

            <EditText
                android:id="@+id/user_sex"
                style="@style/user_info_edit_style"
                android:hint="请输入性别"
                android:singleLine="true" />

        </RelativeLayout>

        <TextView style="@style/user_view_right_line_style" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView
                style="@style/common_liner_lefttv_style"
                android:text="生日" />

            <EditText
                android:id="@+id/user_age"
                style="@style/user_info_edit_style"
                android:digits="1234567890"
                android:hint="请输入年龄"
                android:inputType="number"
                android:singleLine="true" />

        </RelativeLayout>

        <TextView style="@style/user_view_right_line_style" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView
                style="@style/common_liner_lefttv_style"
                android:text="驾龄" />

            <EditText
                android:id="@+id/user_car_age"
                style="@style/user_info_edit_style"
                android:digits="1234567890."
                android:hint="请输入驾龄"
                android:inputType="number" />

        </RelativeLayout>

        <TextView style="@style/user_view_right_line_style" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView
                style="@style/common_liner_lefttv_style"
                android:text="联系方式" />

            <EditText
                android:id="@+id/user_phone"
                style="@style/user_info_edit_style"
                android:digits="1234567890-"
                android:hint="请输入联系方式"
                android:inputType="number" />

        </RelativeLayout>


        <TextView style="@style/user_view_right_line_style" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView
                style="@style/common_liner_lefttv_style"
                android:text="家庭住址" />

            <EditText
                android:id="@+id/user_address"
                style="@style/user_info_edit_style"
                android:hint="请输入家庭住址" />
        </RelativeLayout>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:background="@color/white">

        <TextView
            style="@style/common_liner_lefttv_style"
            android:paddingLeft="10dp"
            android:text="证件照" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/select_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" />

</LinearLayout>